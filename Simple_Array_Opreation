package reference;
import java.util.*;
import java.util.stream.IntStream;

public class ArrayFuncation {
   public static void main(String srgs[])
   { 
      Scanner s=new Scanner(System.in);
      int n,i,t;
      
       System.out.println("ENTER LIMIT OF ARRAY");  
     
      n=s.nextInt();
      int a[]=new int[n];
      
      for(i=0;i<n;i++)
      { 
      
          //get value and print it
          
          a[i]=s.nextInt();
      
      
      }
      System.out.println(Arrays.toString(a));  //this method used to print array
      
        System.out.println("ENTER MUTIPLICATION NUMBER:");
        t=s.nextInt();
     
       System.out.println("ENTER VALUE FOR MALTIPICATION:");  
     
      for(i=0;i<n;i++)
      { 
      
          // table print using this array
          
          a[i]=t*s.nextInt();
      
      
      }
       System.out.println(Arrays.toString(a));  //this method used to print array
     
      for(int it:a)
      { 
        //print iterating 
        System.out.println(it);
      
          
      }
     
      //stream to print sum of array
      
      int sum = IntStream.of(a).sum();
      
      System.out.println(sum);
      
      
      
    
          
          
          
      
      
    }
      
     
   
   
    
    
}
